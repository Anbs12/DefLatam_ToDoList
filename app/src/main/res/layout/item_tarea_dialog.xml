<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Checkbox no interactivo, solo visual -->
        <CheckBox
            android:id="@+id/checkbox_tareaDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:clickable="false"
            android:focusable="false"
            app:buttonTint="@color/material_on_surface_disabled" 
            tools:checked="true"/>

        <!-- Contenido de la tarea -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCompletadaDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completada"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/txtDescripcionDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Descripción de la tarea para el diálogo..."
                android:textAppearance="?attr/textAppearanceBody2"
                android:maxLines="2" 
                android:ellipsize="end"
                android:visibility="visible"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
