<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_card_tarea"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <!--Contiene los datos de la tarea.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <!--Titulo y descripcion-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCompletada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:maxLines="1"
                android:text="Completada"
                android:textSize="16sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/txtDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="151"
                android:maxLines="3"
                android:paddingTop="8dp"
                android:text="DescripcionDescripcionDescripcionDescripcionDescripcionDescripcionDescripcionDescripDescripcionDescripcionDescripcionDescripcionDescripciondescripcion."
                android:textSize="12sp"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/txtDescripcionEditable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="151"
                android:maxLines="3"
                android:paddingTop="8dp"
                android:text="Soy editable."
                android:textSize="12sp"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_tarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="20dp"
                android:checked="false"
                android:gravity="center" />

            <Button
                android:id="@+id/btnEditarTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Editar"
                android:visibility="visible"
                android:textSize="8sp"/>
            <Button
                android:id="@+id/btnConfirmarEdicionTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Confirmar cambios"
                android:visibility="gone"
                android:textSize="8sp"/>
            <Button
                android:id="@+id/btnEditarTareaCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Cancelar?"
                android:visibility="gone"
                android:textSize="8sp"
                android:backgroundTint="@color/red"/>

        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>